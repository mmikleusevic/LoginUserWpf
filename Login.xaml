<Window x:Class="LoginUserWpf.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginUserWpf"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel Margin="10px">
        <Label Content="Login" Foreground="black" FontSize="24" HorizontalAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Username" Foreground="Black" FontSize="20" Margin="10px"/>
        <TextBox Name="txtUsername" Background="White" Foreground="Black" FontSize="20"/>
        <Label Content="Password" Foreground="Black" FontSize="20" Margin="10px"/>
        <PasswordBox Name="txtPassword" Background="White" Foreground="Black" FontSize="20"/>
        <Button Name="btnLogin" Click="BtnLogin_Click"  Content="Login" Margin="100 45" Background="White" Foreground="Black" FontSize="20"/>
    </StackPanel>
</Window>
